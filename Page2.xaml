<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiComm_IssueSnackbarCrash.Page2">
    
    <Grid RowDefinitions="44,44,*" RowSpacing="5">
        <Grid Grid.Row="0" Grid.RowSpan="3" RowDefinitions="*,*,*">
            <Grid Grid.Row="1" x:Name="gdSnackBarAnchor" />
        </Grid>
        <Button x:Name="btnShow" Grid.Row="0" Text="Show Snackbar" TextColor="White" BackgroundColor="Blue" Clicked="btnShow_Clicked" />
        <Button x:Name="btnBack" Grid.Row="1" Text="Back Page" TextColor="White" BackgroundColor="Blue" Clicked="btnBack_Clicked" />
    </Grid>
</ContentPage>
